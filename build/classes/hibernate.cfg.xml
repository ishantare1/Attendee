<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
   <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
   <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
   <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/test</property> 
    <property name="hibernate.connection.username">root</property>
   <property name="hibernate.connection.password">root</property> 
   <property name="hibernate.hbm2ddl.auto">update</property>
   <mapping resource="hib/swing/User.hbm.xml"/>
 <mapping resource="hib/swing/Student.hbm.xml"/>
 <mapping resource="hib/swing/Teacher.hbm.xml"/>
 <mapping resource="hib/swing/Courses.hbm.xml"/>
<mapping resource="hib/swing/Notice.hbm.xml"/>
<mapping resource="hib/swing/Notes.hbm.xml"/>
   
 </session-factory>
</hibernate-configuration>